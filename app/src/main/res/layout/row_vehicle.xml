<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" android:clickable="true">

    <ImageView android:id="@+id/icon" android:layout_width="50dp" android:layout_height="50dp" tools:background="#AAA" android:layout_centerVertical="true" />

    <TextView android:id="@+id/id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:layout_marginRight="10dp" tools:text="Id"  android:layout_centerHorizontal="true" android:layout_centerVertical="true" />

    <TextView android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:layout_marginRight="10dp" tools:text="Name" android:layout_alignParentRight="true" android:layout_centerVertical="true" />

</RelativeLayout>